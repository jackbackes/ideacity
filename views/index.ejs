<div id="fb-root"></div>

<script type="text/javascript" src="./js/facebook.js"></script>

<div class="container top-container">


<div class="container jumbotron">



	<div class="container jumbotron">
		<h1>Make Dallas Better!</h1>
					<div
			  class="fb-like"
			  data-share="true"
			  data-width="450"
			  data-show-faces="true">
			</div>

	</div>

    <div class="jumbotron text-center">
       



    <!-- IF USER IS LOGGED IN - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
        <% if(user) {%> <p> Welcome <a href="/profile"><%= user.facebook.name %></a> ! </p> <a href="/logout" class="btn btn-primary">Logout</a>


		<div class="container jumbotron text-center">
			<div class="col-md-3">
				<button class="btn btn-primary" data-toggle="collapse" data-target="#add-my-idea">Add Your Idea to IdeaCity!</button>
			</div>
		</div>
	</div>



    <!-- IF USER IS NOT LOGGED IN  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
        <% } else { %>         
        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span>Login With Facebook to add your idea!</a>

    </div>

        <% } %>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

	<div id="add-my-idea" class="col-md-12 collapse container jumbotron text-center">
		<p>Add your ideas on how Dallas can be a better place!</p>
		<style>#ideaForm .inputShadow {max-width: inherit;} </style>
		<form class="" id="ideaForm" style="width:100%; padding-left:10px; padding-right: 10px;">
			<div class="form-group inputShadow" id="idea-title">
				<label for="input-idea-title">Idea</label>
				<input type ="text" class="form-control inputShadow" id="input-idea-input" placeholder="Dallas should..."></input>
			</div>
			<div class="form-group inputShadow" id="idea-description">
				<label for="input-idea-description-title">Description</label>
				<textarea class="form-control inputShadow" id="input-idea-description" placeholder="More info..." rows="4"></textarea>
			</div>
			<div class="form-group inputShadow" id="idea-tag">
				<label for="input-idea-tag">Associate your Idea with a City</label>
				<select class="form-control" id="input-idea-category">
					<option>Educated</option>
					<option>Entrepreneurial</option>
					<option>Healthy</option>
					<option>Literary</option>
					<option>Physical</option>
					<option>Innovative</option>
					<option>Political</option>
					<option>Cultural</option>
				</select>
			</div>
		</form>
		<button type="button" class="btn btn-primary" id="sendIdea" >Submit My Idea</button>
	</div>



	<br>
	<div class="container">

		<h1>Innovative City Ideas</h1>
		<ul class="postIts jumbotron canaryYellow" id="innovative">

			<!--<div class="postItShadow"></div>-->
			<% 	console.log('ideas: ' + ideas);
				ideas.filter(function(value){
					return value.category === 'innovative';
				}).forEach( function( idea ) { %>
				<li class="postIt container jumbotron">
					<h3><%= idea.idea %></h3>
					<p><%= idea.description %></p>
